{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../dist",
    "module": "ESNext",
    "composite": true,
    "lib": ["esnext"],
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "..",
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts",
    "../vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}